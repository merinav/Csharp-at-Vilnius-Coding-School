<Window x:Class="WpfLearningApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLearningApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush Color="#FFA7E9F7" Opacity="0.99"/>
    </Window.Background>
    <Window.BorderBrush>
        <ImageBrush/>
    </Window.BorderBrush>
    <Grid x:Name="TitleLabel">
        <Label x:Name="TitleLabel1" Content="HELLO WORLD" Margin="184,161,0,219" RenderTransformOrigin="0.5,0.5" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Opacity="0.5" Width="182">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="1.405"/>
                    <RotateTransform Angle="-1.115"/>
                    <TranslateTransform Y="9.808"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="ButtonOne" Content="BUTTON" HorizontalAlignment="Left" Margin="428,261,0,0" VerticalAlignment="Top" Height="117" Width="209" Background="#FFDFE4C1" FontWeight="Bold" FontSize="18" Click="HandleButtonClick"/>

    </Grid>
</Window>
